package model.dao;

import java.sql.SQLIntegrityConstraintViolationException;
import java.util.ArrayList;
import java.util.List;

import model.ModelException;
import model.User;

public class MySQLUserDAO implements UserDAO {

	@Override
	public boolean save(User user) throws ModelException {

		DBHandler db = new DBHandler();

		// Correção crucial para o INSERT:
		// Se 'id' é AUTO_INCREMENT, você não o inclui na lista de colunas para as quais está fornecendo valores.
		// A ordem das colunas deve corresponder à ordem dos parâmetros (nome, sexo, email, senha).
		String sqlInsert = "INSERT INTO users (nome, sexo, email, senha) VALUES (?, ?, ?, ?);"; 

		db.prepareStatement(sqlInsert);
		db.setString(1, user.getName());
		db.setString(2, user.getGender());
		db.setString(3, user.getEmail());
		db.setString(4, user.getSenha()); // Este é o 4º parâmetro, correspondendo à 4ª coluna (senha)

		return db.executeUpdate() > 0;
	}

	@Override
	public boolean update(User user) throws ModelException {

		DBHandler db = new DBHandler();

		// A SQL para UPDATE deve ter a mesma quantidade de '?' na cláusula SET
		// e o mesmo número de 'setString'/'setInt' correspondentes, mais o ID no WHERE.
		String sqlUpdate = "UPDATE users " +
		                   "SET nome = ?, " +
		                   "sexo = ?, " +
		                   "email = ?, " +
		                   "senha = ? " + // A coluna senha está sendo atualizada
		                   "WHERE id = ?";

		db.prepareStatement(sqlUpdate);

		db.setString(1, user.getName());
		db.setString(2, user.getGender());
		db.setString(3, user.getEmail());
		db.setString(4, user.getSenha()); // 4º parâmetro para a senha
		db.setInt(5, user.getId());       // 5º parâmetro para o ID no WHERE

		return db.executeUpdate() > 0;
	}
	@Override
	public boolean delete(User user) throws ModelException {

		DBHandler db = new DBHandler();

		String sqlDelete = " DELETE FROM users " + " WHERE id = ?;";

		db.prepareStatement(sqlDelete);
		db.setInt(1, user.getId());

		try {

			return db.executeUpdate() > 0;

		} catch (ModelException e) {
			if (e.getCause() instanceof SQLIntegrityConstraintViolationException) {
				return false;
			}

			throw e;
		}
	}

	@Override
	public List<User> listAll() throws ModelException {

		DBHandler db = new DBHandler();

		List<User> users = new ArrayList<User>();

		String sqlQuery = "SELECT * FROM users";

		db.createStatement();

		db.executeQuery(sqlQuery);

		while (db.next()) {
			User u = createUser(db);
			users.add(u);
		}

		return users;
	}

	@Override
	public User findById(int id) throws ModelException {

		DBHandler db = new DBHandler();

		String sql = "SELECT * FROM users WHERE id = ?";

		db.prepareStatement(sql);
		db.setInt(1, id);
		db.executeQuery();

		User u = null;
		while (db.next()) {
			u = createUser(db);
			break;
		}

		return u;
	}

	private User createUser(DBHandler db) throws ModelException {
		User u = new User(db.getInt("id"));
		u.setName(db.getString("nome"));
		u.setGender(db.getString("sexo"));
		u.setEmail(db.getString("email"));
		u.setSenha(db.getString("senha"));
		return u;
	}

	@Override
	public User findByEmail(String email) throws ModelException {
		DBHandler db = new DBHandler();

		String sql = "SELECT * FROM users WHERE email = ?";

		db.prepareStatement(sql);
		db.setString(1, email);
		db.executeQuery();

		User u = null;
		while (db.next()) {
			u = createUser(db);
			break;
		}

		return u;
	}
}